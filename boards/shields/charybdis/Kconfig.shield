config SHIELD_CHARYBDIS_LEFT
	def_bool $(shields_list_contains,charybdis_left)

config SHIELD_CHARYBDIS_RIGHT
	def_bool $(shields_list_contains,charybdis_right)

# Temperature sensor configuration
config ZMK_TEMP_SENSOR
	bool "Enable temperature sensor support"
	depends on SENSOR && (SHIELD_CHARYBDIS_RIGHT)
	select TEMP_NRF5
	default y if SHIELD_CHARYBDIS_RIGHT
	help
	  Enable temperature sensor support with Bluetooth LE service.
	  Only available on the right side (central) device.

if ZMK_TEMP_SENSOR

config ZMK_TEMP_SENSOR_UPDATE_INTERVAL
	int "Temperature sensor update interval in milliseconds"
	default 30000
	range 5000 300000
	help
	  How often to read and update the temperature sensor value.
	  Range: 5 seconds to 5 minutes.

endif # ZMK_TEMP_SENSOR